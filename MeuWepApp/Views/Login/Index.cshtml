@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}

@if (TempData["MensagemError"] != null)
{
   <div class="alert alert-danger d-flex justify-content-between" role="alert">
        <div>@TempData["MensagemError"]</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div id="conteinerLogin">
    <div id="boxLogin">
        <div id="asideLogin">
            <span class="material-symbols-outlined iconUserLogin">group</span>
            Contactify
        </div>
        <div id="formLogin">
            <form asp-controller="Login" asp-action="Entrar" method="post">
                <div class="mt-3 mb-2">
                    <label for="login" class="form-label">Login</label>
                    <input asp-for="Login" type="text" class="form-control" id="login">
                    @Html.ValidationMessageFor(option => option.Login)
                </div>
                <div class="mb-0">
                    <label for="senhaLogin" class="form-label">Senha</label>
                    <input asp-for="Senha" type="password" class="form-control" id="senhaLogin">
                    @Html.ValidationMessageFor(option => option.Senha)
                </div>
                <button type="submit" class="btn btn-primary mt-4 mb-3 w-100">ENTRAR</button>
            </form>
        </div>
    </div>
</div>